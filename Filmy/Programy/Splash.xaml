<Window x:Class="Filmy.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="248" Width="439"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        WindowStyle="None">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF1B3D29" Offset="0"/>
            <GradientStop Color="#FF288E56" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label Content="Filmotéka" 
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="36" FontWeight="Bold" FontStyle="Italic"
               Foreground="White" TextOptions.TextFormattingMode="Display"/>
        <Label Content="Načítam data, bude to chvíli trvat ..."
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom"
               Margin="10,0,0,10"               
               Foreground="White"/>
        <Image HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Height="16" Width="16"
               Margin="10,10,0,0"
               Source="/Filmy;component/Resources/Filmoteka.ico"/>
    </Grid>
</Window>
